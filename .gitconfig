[user]
        name = Mario Corchero
        email = mariocj89@gmail.com
[core]
        editor = vim
        excludesfile = ~/.gitignore
[help]
        autocorrect = 1
[color]
        ui = always
[color "branch"]
        current = yellow bold
        local = green bold
        remote = cyan bold
[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = red bold
        new = green bold
        whitespace = red reverse
[color "status"]
        added = green bold
        changed = yellow bold
        Auntracked = red bold
[diff]
        tool = vimdiff
[difftool]
        prompt = false
[alias]
        ci = commit
        co = checkout
        st = status -s
    topology =  log --graph --full-history --all --color --pretty=format:"%x1b[31m%h%x09%x1b[32m%d%x1b[0m%x20%s"

[credential]
	helper = cache --timeout=36000
[push]
	default = matching
